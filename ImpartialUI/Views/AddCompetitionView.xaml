<UserControl x:Class="ImpartialUI.Views.AddCompetitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ImpartialUI.ViewModels"
             xmlns:v="clr-namespace:ImpartialUI.Views"
             xmlns:c="clr-namespace:ImpartialUI.Controls"
             xmlns:local="clr-namespace:ImpartialUI.Views"
             xmlns:converters="clr-namespace:ImpartialUI.Converters"
             xmlns:enums="clr-namespace:ImpartialUI.Enums"
             mc:Ignorable="d"
             x:Name="View"
             d:DesignHeight="800" d:DesignWidth="1600"
             d:DataContext="{d:DesignInstance Type=vm:AddCompetitionViewModel, IsDesignTimeCreatable=True}"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" Margin="20,20,20,0" Visibility="Visible" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal" Margin="0 5" Visibility="Collapsed">
                    <Button 
                            Content="Select Prelims Score Sheet"
                            Width="200" Height="20"
                            Margin="0 0 20 0"
                            Command="{Binding SelectPrelimsPathCommand}"/>
                    <TextBox
                            Width="500" Height="20"
                            Text="{Binding PrelimsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button 
                            Content="Select Finals Score Sheet"
                            Width="200" Height="20"
                            Margin="0 0 20 0"
                            Command="{Binding SelectFinalsPathCommand}"/>
                    <TextBox
                            Width="500" Height="20"
                            Text="{Binding FinalsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                    <StackPanel.Resources>
                        <converters:BoolToEnumConverter x:Key="BoolToEnumConverter"/>
                    </StackPanel.Resources>
                    <RadioButton Content="EEPro" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static enums:ScoresheetSelector.EEPro}}"/>
                    <RadioButton Content="Step Right Solutions" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static enums:ScoresheetSelector.StepRightSolutions}}"/>
                    <RadioButton Content="World Dance Registry" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static enums:ScoresheetSelector.WorldDanceRegistry}}"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center">
                <Button 
                        Content="Open Scoresheet"
                        Width="150" Height="20"
                        FontWeight="Bold"
                        Command="{Binding ParseScoreSheetsCommand}"
                        Margin="20"/>
                <Button 
                        Content="Cancel"
                        Width="150" Height="20"
                        FontWeight="Bold"
                        Command="{Binding CancelCommand}"
                        Margin="20"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <c:CompetitionViewer Competition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0" Width="400" Margin="20">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="First Name:" Margin="0 0 5 0"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Last Name:" Margin="0 0 5 0"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="WSDC Id:" Margin="0 0 5 0"/>
                        <TextBox Text="{Binding WsdcId, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </StackPanel>
                </StackPanel>

                <Button 
                    Grid.Row="1"
                    Content="Add Competitor To Database"
                    Width="200" Height="20"
                    FontWeight="Bold"
                    Command="{Binding AddCompetitorCommand}"
                    IsDefault="True"
                    Margin="20"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Column="1" Width="400" Margin="20">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="First Name:" Margin="0 0 5 0"/>
                        <TextBox Text="{Binding JudgeFirstName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Last Name:" Margin="0 0 5 0"/>
                        <TextBox Text="{Binding JudgeLastName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                    </StackPanel>
                </StackPanel>

                <Button 
                    Grid.Row="1"
                    Content="Add Judge To Database"
                    Width="200" Height="20"
                    FontWeight="Bold"
                    Command="{Binding AddJudgeCommand}"
                    IsDefault="True"
                    Margin="20"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <c:CompetitionAdder Competition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>

            <Button 
                Grid.Row="1"
                Content="Add Competition To Database"
                Width="200" Height="20"
                FontWeight="Bold"
                Command="{Binding AddCompetitionCommand}"
                IsDefault="True"
                Margin="20"
                VerticalAlignment="Bottom"/>

        </Grid>
    </Grid>
</UserControl>
