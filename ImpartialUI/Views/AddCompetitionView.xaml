<UserControl x:Class="ImpartialUI.Views.AddCompetitionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ImpartialUI.ViewModels"
             xmlns:v="clr-namespace:ImpartialUI.Views"
             xmlns:c="clr-namespace:ImpartialUI.Controls"
             xmlns:local="clr-namespace:ImpartialUI.Views"
             xmlns:converters="clr-namespace:ImpartialUI.Converters"
             xmlns:uiEnums="clr-namespace:ImpartialUI.Enums"
             xmlns:imp="clr-namespace:Impartial"
             mc:Ignorable="d"
             x:Name="View"
             d:DesignHeight="800" d:DesignWidth="1600"
             d:DataContext="{d:DesignInstance Type=vm:AddCompetitionViewModel, IsDesignTimeCreatable=True}"
             Background="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="20,20,20,0" Visibility="Visible">
                <StackPanel Orientation="Horizontal" Margin="0 5" Visibility="Collapsed">
                    <Button 
                        Content="Select Prelims Score Sheet"
                        Width="200" Height="20"
                        Margin="0 0 20 0"
                        Command="{Binding SelectSemisPathCommand}"/>
                    <TextBox
                        Width="500" Height="20"
                        Text="{Binding PrelimsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 2">
                    <Button 
                            Content="Select Prelims Score Sheet"
                            Width="200" Height="20"
                            Margin="0 0 20 0"
                            Command="{Binding SelectPrelimsPathCommand}"/>
                    <TextBox
                            Width="500" Height="20"
                            Text="{Binding PrelimsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 2">
                    <Button 
                            Content="Select Semis Score Sheet"
                            Width="200" Height="20"
                            Margin="0 0 20 0"
                            Command="{Binding SelectSemisPathCommand}"/>
                    <TextBox
                            Width="500" Height="20"
                            Text="{Binding SemisPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 2">
                    <Button 
                            Content="Select Finals Score Sheet"
                            Width="200" Height="20"
                            Margin="0 0 20 0"
                            Command="{Binding SelectFinalsPathCommand}"/>
                    <TextBox
                            Width="500" Height="20"
                            Text="{Binding FinalsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                    <StackPanel.Resources>
                        <converters:BoolToEnumConverter x:Key="BoolToEnumConverter"/>
                    </StackPanel.Resources>
                    <RadioButton Content="Auto" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static uiEnums:ScoresheetSelector.Auto}}"/>
                    <RadioButton Content="EEPro" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static uiEnums:ScoresheetSelector.EEPro}}"/>
                    <RadioButton Content="Step Right Solutions" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static uiEnums:ScoresheetSelector.StepRightSolutions}}"/>
                    <RadioButton Content="World Dance Registry" Margin="10" IsChecked="{Binding ScoresheetSelector, Converter={StaticResource BoolToEnumConverter}, ConverterParameter={x:Static uiEnums:ScoresheetSelector.WorldDanceRegistry}}"/>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                <Button 
                    Width="150" Height="20"
                    FontWeight="Bold"
                    Command="{Binding ParseScoreSheetsCommand}"
                    Margin="20">
                    <Button.Content>
                        <Grid>
                            <Grid>
                                <ProgressBar
                                    Width="150"
                                    Height="20"
                                    Minimum="0"
                                    Maximum="100"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Value="{Binding ParseProgressPercentage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <Grid>
                                <TextBlock HorizontalAlignment="Center" Text="Open Scoresheet"/>
                            </Grid>
                        </Grid>
                    </Button.Content>
                </Button>
                <Button 
                    Content="Cancel"
                    Width="150" Height="20"
                    FontWeight="Bold"
                    Command="{Binding CancelCommand}"
                    Margin="20"/>
            </StackPanel>

            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0" Width="400" Margin="20">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="First Name:" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Name:" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="WSDC Id:" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding WsdcId, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        </StackPanel>
                    </StackPanel>

                    <Button 
                        Grid.Row="1"
                        Content="Add Competitor To Database"
                        Width="200" Height="20"
                        FontWeight="Bold"
                        Command="{Binding AddCompetitorCommand}"
                        IsDefault="True"
                        Margin="10 10 5 10"/>

                    <c:SearchTextBox 
                        Grid.Row="1"
                        ItemsSource="{Binding Competitors}"
                        HorizontalAlignment="Center"
                        />
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="1" Width="400" Margin="20">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="First Name:" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding JudgeFirstName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Last Name:" Margin="0 0 5 0"/>
                            <TextBox Text="{Binding JudgeLastName, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                        </StackPanel>
                    </StackPanel>

                    <Button 
                        Grid.Row="1"
                        Content="Add Judge To Database"
                        Width="200" Height="20"
                        FontWeight="Bold"
                        Command="{Binding AddJudgeCommand}"
                        IsDefault="True"
                        Margin="20"/>
                </StackPanel>
            </Grid>
        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="Prelims (Leaders)" IsSelected="True">
                <ScrollViewer Margin="10 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <c:PrelimCompetitionViewer 
                            Grid.Column="0" 
                            PrelimCompetition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <c:PrelimCompetitionAdder 
                            x:Name="LeaderPrelimsAdder" 
                            Grid.Column="2" 
                            Round="{x:Static imp:Round.Prelims}" 
                            Role="Leader" 
                            PrelimCompetition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Competitors="{Binding Competitors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Judges="{Binding Judges, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Prelims (Followers)">
                <ScrollViewer Margin="10 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <c:PrelimCompetitionViewer 
                            Grid.Column="0"
                            PrelimCompetition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <c:PrelimCompetitionAdder 
                            x:Name="FollowersPrelimsAdder" 
                            Grid.Column="2" 
                            Round="{x:Static imp:Round.Prelims}" 
                            Role="Follower" 
                            PrelimCompetition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Competitors="{Binding Competitors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Judges="{Binding Judges, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Semis (Leaders)" Visibility="{Binding Competition.HasSemis, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer Margin="10 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <c:PrelimCompetitionViewer 
                            Grid.Column="0" 
                            PrelimCompetition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <c:PrelimCompetitionAdder 
                            x:Name="LeaderSemisAdder" 
                            Grid.Column="2" 
                            Role="Leader" 
                            Round="{x:Static imp:Round.Semifinals}" 
                            PrelimCompetition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Competitors="{Binding Competitors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Judges="{Binding Judges, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Semis (Followers)" Visibility="{Binding Competition.HasSemis, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer Margin="10 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <c:PrelimCompetitionViewer 
                            Grid.Column="0" 
                            PrelimCompetition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <c:PrelimCompetitionAdder 
                            x:Name="FollowerSemisAdder" 
                            Grid.Column="2" 
                            Role="Follower" 
                            Round="{x:Static imp:Round.Semifinals}" 
                            PrelimCompetition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Competitors="{Binding Competitors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Judges="{Binding Judges, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Finals">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <c:FinalCompetitionViewer 
                            Grid.Row="0" 
                            FinalCompetition="{Binding Competition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="10"/>
                        <c:FinalCompetitionAdder 
                            x:Name="FinalsCompetitionAdder" 
                            Grid.Row="1" 
                            FinalCompetition="{Binding Competition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Competitors="{Binding Competitors, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Judges="{Binding Judges, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="10"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button 
                Content="Add Competition To Database"
                Width="200" Height="20"
                FontWeight="Bold"
                Command="{Binding AddCompetitionCommand}"
                IsDefault="True"
                Margin="20"/>
            
            <Button 
                Content="Refresh Cache"
                Width="200" Height="20"
                FontWeight="Bold"
                Command="{Binding RefreshCacheCommand}"
                IsDefault="True"
                Margin="20"/>
        </StackPanel>

    </Grid>
</UserControl>
