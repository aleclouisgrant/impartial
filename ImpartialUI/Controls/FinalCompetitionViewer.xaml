<UserControl x:Class="ImpartialUI.Controls.FinalCompetitionViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImpartialUI.Controls"
             xmlns:m="clr-namespace:Impartial;assembly=Impartial"
             mc:Ignorable="d">
    <Grid VerticalAlignment="Top" x:Name="ScoreGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="100" Style="{StaticResource ScoreViewerHeaderBorderStyle}"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Place" Style="{StaticResource ScoreViewerHeaderTextStyle}"/>
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Bib" Style="{StaticResource ScoreViewerHeaderTextStyle}"/>
        <TextBlock Grid.Row="0" Grid.Column="3" Text="Competitors" Style="{StaticResource ScoreViewerHeaderTextStyle}"/>
    </Grid>
</UserControl>
