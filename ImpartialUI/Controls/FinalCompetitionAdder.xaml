<UserControl x:Class="ImpartialUI.Controls.FinalCompetitionAdder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImpartialUI.Controls"
             xmlns:m="clr-namespace:Impartial;assembly=Impartial"
             mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border VerticalAlignment="Top" Grid.Row="0" Background="Orange" BorderBrush="Black" BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <TextBox Margin="2" MinWidth="10" Grid.Column="0" x:Name="NameTextBox" TextChanged="NameTextBox_TextChanged" Background="Transparent" Text="{Binding FinalCompetition.Name, Mode=TwoWay}"/>

                <TextBlock Margin="2" Grid.Column="1" VerticalAlignment="Center">
                    <Run Text="Jack &amp; Jill"/>
                    <Run Text="{Binding FinalCompetition.Division, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Run Text="Finals"/>
                </TextBlock>

                <DatePicker x:Name="CompDatePicker" Grid.Column="2" HorizontalAlignment="Right" SelectedDateChanged="CompDatePicker_SelectedDateChanged" DisplayDate="{Binding FinalCompetition.DateTime, Mode=TwoWay}"/>
            </Grid>
        </Border>

        <Grid VerticalAlignment="Top" Grid.Row="1" x:Name="ScoreGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="Gray" Margin="1">
                <TextBlock
                    Text="Place"
                    FontWeight="Bold" FontStyle="Italic" Margin="1"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Margin="1">
                <TextBlock
                    Text="Competitor (Leader)" 
                    FontWeight="Bold" FontStyle="Italic" Margin="1"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" BorderThickness="1" BorderBrush="Gray" Margin="1">
                <TextBlock
                    Text="Competitor (Follower)" 
                    FontWeight="Bold" FontStyle="Italic" Margin="1"/>
            </Border>

            <Button x:Name="AddColumnButton" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="3" Content="+" Width="20" Margin="1" Click="AddColumn_Click"/>

            <!-- Add Row Button -->
            <Border Grid.Row="1" Grid.Column="0" BorderThickness="0" BorderBrush="Gray" Margin="1" x:Name="AddRowBorder">
                <Button 
                    Content="+"
                    Click="AddRow_Click"/>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>
