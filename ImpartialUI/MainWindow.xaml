<Window x:Class="ImpartialUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:ImpartialUI.Views"
        xmlns:vm="clr-namespace:ImpartialUI.ViewModels"
        xmlns:local="clr-namespace:ImpartialUI"
        mc:Ignorable="d"
        x:Name="View"
        Title="Impartial" Height="800" Width="1600">
    <Grid>
        <TabControl Margin="0 20 0 0" BorderThickness="0 2 0 0">
            <TabItem Header="Ratings">
                <v:RatingsView/>
            </TabItem>
            <TabItem Header="Add Competition">
                <v:AddCompetitionView Margin="20" d:DataContext="{d:DesignInstance Type=vm:AddCompetitionViewModel, IsDesignTimeCreatable=True}"/>
            </TabItem>
            <TabItem Header="Judge">
                <v:ParseScoreSheetsView/>
            </TabItem>
            <TabItem Header="View Competition" IsSelected="True">
                <v:ViewCompetitionView Margin="30"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
